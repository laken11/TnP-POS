<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bvn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enrollment">

    <RelativeLayout
        android:id="@+id/button_ligh"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_ligh">

        <ImageButton
            android:id="@+id/back"
            android:background="@drawable/button_ligh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="19dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="@string/back_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame_26"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/frame_16"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/frame_16" />

        <RelativeLayout
            android:id="@+id/frame_23"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_marginStart="11dp"
            android:background="@drawable/frame_16" />

        <RelativeLayout
            android:id="@+id/frame_21"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_marginStart="11dp"
            android:background="@drawable/frame_16" />
    </LinearLayout>


    <TextView
        android:id="@+id/enroll_usin"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:text="@string/info_message"
        android:textAppearance="@style/info_message"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical" />

    <RelativeLayout
        android:id="@+id/enrollment_det"
        android:layout_width="350dp"
        android:layout_height="194dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="252dp"
        android:background="@drawable/enrollment_details"
        android:elevation="24dp">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="58dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/card_name"
            android:textAppearance="@style/card_name"
            android:translationY="-0.15sp" />

        <EditText
            android:id="@+id/card_name_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text=""
            android:textAppearance="@style/card_name_text"
            android:translationY="-0.15sp" />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="18dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/card_number"
            android:textAppearance="@style/card_number"
            android:translationY="-0.15sp" />

        <EditText
            android:id="@+id/card_number_text"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_name_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text=""
            android:textAppearance="@style/card_number_text"
            android:translationY="-0.15sp" />

        <TextView
            android:id="@+id/expiry"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_number"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="17dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/expiry"
            android:textAppearance="@style/expiry"
            android:translationY="-0.15sp" />

        <EditText
            android:id="@+id/expiry_text"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_number_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text=""
            android:textAppearance="@style/expiry_text"
            android:translationY="-0.15sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/proceed_btn"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_below="@+id/enrollment_det"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="31dp"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:text="@string/confirm_details"
        android:textAppearance="@style/proceed"
        android:textSize="18sp" />

</RelativeLayout>