<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_action">

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="69dp"
        android:textAlignment="center"
        android:text="@string/action_message"
        android:textAppearance="@style/action_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/frame_1_1_1"
            android:layout_width="190dp"
            android:layout_height="127dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="195dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bgframe_1">

            <ImageView
                android:id="@+id/enrollment_btn"
                android:layout_width="59dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="71dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/document_text"
                android:visibility="visible" />

            <TextView
                android:id="@+id/enrollment"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:lineSpacingExtra="3sp"
                android:text="@string/enrollment"
                android:textAlignment="center"
                android:textAppearance="@style/enrollment" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_1_2_1"
            android:layout_width="190dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="245dp"
            android:background="@drawable/bgframe_1">

            <ImageView
                android:id="@+id/transaction_btn"
                android:layout_width="83dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="56dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/pos" />

            <TextView
                android:id="@+id/transaction"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:lineSpacingExtra="3sp"
                android:text="Transaction"
                android:textAlignment="center"
                android:textAppearance="@style/transaction" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>